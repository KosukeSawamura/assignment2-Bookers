<h1>Books</h1>


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
     <% @books.each do |book| %>
    <tr>
      <td><span><%= book.title %></span></td>
      <td><span><%= book.body %></span></td>
      <td><span><%= link_to 'Show', "/books/#{book.id}" %></span></td>
      <td><span><%= link_to 'Edit', "/books/#{book.id}/edit" %></span></td>
      <td><span><%= link_to 'Destroy', destroy_book_path(book.id), method: :delete, "data-confirm"=>"Are you sure?" %></span></td>
    </tr>
</tbody>
<% end %>
</table>


<h2 class="newbook-title">New Book</h2>

<% if @book.errors.any? %>
  <h2><%= @book.errors.count %> errors prohibited this book from being saved:<h2>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

 <div class="field">
   <%= form_with model: @book do |f| %>
     <li>Title</li>
     <%= f.text_field :title %>
    <li>Body</li>
     <%= f.text_area :body %>
     <li></li>
     <%= f.submit ' Create Book ' %>
  <% end %>



</div>

