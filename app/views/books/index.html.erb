<h1>Books</h1>


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <% @books.each do |book| %>
  <tbody>
    <tr>
      <td><span><%= book.title %></span></td>
      <td><span><%= book.body %></span></td>
      <td><span><%= link_to 'Show', "/books/#{book.id}" %></span></td>
      <td><span><%= link_to 'Edit', "/books/#{book.id}/edit" %></span></td>
      <td><span>destroy</span></td>
    </tr>
</tbody>
<% end %>
</table>


<h2 class="newbook-title">New Book</h2>

 <div class="field">
   <%= form_with model: Book.new do |f| %>
     <li>Title</li>
     <%= f.text_field :title %>
    <li>Body</li>
     <%= f.text_area :body %>
     <li></li>
     <%= f.submit ' Create Book ' %>
  <% end %>
</div>