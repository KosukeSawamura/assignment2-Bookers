<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <h2><%=@book.errors.count %> errors prohibited this book from being saved:<h2>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="field">
  <%= form_with model: @book do |f| %>
     <li>Title</li>
     <%= f.text_field :title %>
    <li>Body</li>
     <%= f.text_area :body %>
     <li></li>
    <div class="submit-button"> <%= f.submit ' Update Book ' %></div>
<% end %>

 <p class="edit-link">
  <%= link_to 'Show', "/books/#{@book.id}" %>
  |
  <%= link_to 'Back', "/books" %>
</p>