<h1>Editing Book</h1>
<div class="field">
  <%= form_with model: @book do |f| %>
     <li>Title</li>
     <%= f.text_field :title %>
    <li>Body</li>
     <%= f.text_area :body %>
     <li></li>
    <div class="submit-button"> <%= f.submit ' Update Book ' %></div>
<% end %>

 <p class="edit-link">
  <%= link_to 'Show', "/books" %>
  |
  <%= link_to 'Back', "/books" %>
</p>